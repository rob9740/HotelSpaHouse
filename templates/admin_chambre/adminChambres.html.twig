{% extends 'base.html.twig' %}

{% block title %}admin chambres{% endblock %}

{% block body %}

<h1 class="text-center">ADMIN - CHAMBRES</h1>
<div class="col-10 m-5">
    <table class="table table-bordered table-hover table-sm text-center">
